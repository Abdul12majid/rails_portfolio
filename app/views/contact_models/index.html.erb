<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Contact models" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Contact models</h1>
    <%= link_to "New contact model", new_contact_model_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="contact_models" class="min-w-full">
    <% @contact_models.each do |contact_model| %>
      <%= render contact_model %>
      <p>
        <%= link_to "Show this contact model", contact_model, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
